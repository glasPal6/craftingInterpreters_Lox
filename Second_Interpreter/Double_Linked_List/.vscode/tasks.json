{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "clang++ build active file",
        "command": "clang++",
        "args": [
            // "-std=c++17",
            // "-stdlib=libc++",
            "main.cpp",
            "-g",
            "-o",
            "main",
            "-Wall",
            "-Wextra",
            "-Werror",
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": true,
          "clear": true
        }
      }
    ]
  }